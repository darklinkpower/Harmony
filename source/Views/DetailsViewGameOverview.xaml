                                            <!--#region CheckDlc-->
                                            <TabItem Header="DLC"
                                                     Visibility="{PluginSettings Plugin=CheckDlc, Path=HasData, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <StackPanel Orientation="Vertical" Margin="0,15,0,0">
                                                    <StackPanel.Resources>
                                                        <Style TargetType="ListBox">
                                                            <Setter Property="Background" Value="Transparent" />
                                                            <Setter Property="BorderThickness" Value="0" />
                                                        </Style>
                                                    </StackPanel.Resources>
                                                    <ContentControl x:Name="CheckDlc_PluginListDlcAll" Height="700" Margin="0,5,0,5"/>
                                                    <ContentControl x:Name="CheckDlc_PluginListDlcOwned" Height="700" Margin="0,5,0,5"/>
                                                    <ContentControl x:Name="CheckDlc_PluginListDlcNotOwned" Height="700" Margin="0,5,0,5"/>
                                                </StackPanel>
                                            </TabItem>
                                            <!--#endregion-->

                                            <TabItem Header="{DynamicResource LOCGameRelations_RelatedGamesLabel}"
                                                     Visibility="{Binding ElementName=GameRelationsVisibilityProxy, Path=Tag}">
                                                <StackPanel Orientation="Vertical" Margin="0,15,0,0">
                                                    <TextBlock x:Name="GameRelationsVisibilityProxy" Visibility="Collapsed">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Tag" Value="Collapsed" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding ElementName=Panel_GameRelations_SimilarGamesControl, Path=Visibility}" Value="Visible">
                                                                        <Setter Property="Tag" Value="Visible" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding ElementName=Panel_GameRelations_SameSeriesControl, Path=Visibility}" Value="Visible">
                                                                        <Setter Property="Tag" Value="Visible" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding ElementName=Panel_GameRelations_SameDeveloperControl, Path=Visibility}" Value="Visible">
                                                                        <Setter Property="Tag" Value="Visible" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding ElementName=Panel_GameRelations_SamePublisherControl, Path=Visibility}" Value="Visible">
                                                                        <Setter Property="Tag" Value="Visible" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                    <Expander x:Name="Panel_GameRelations_SimilarGamesControl"
                                                              Header="{DynamicResource LOCGameRelations_SimilarGamesLabel}"
                                                              IsExpanded="True"
                                                              Margin="0,10,0,0"
                                                              Visibility="{PluginSettings Plugin=GameRelations, Path=SimilarGamesControlSettings.IsVisible, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}">
                                                        <ContentControl x:Name="GameRelations_SimilarGamesControl" Margin="0,10,0,0" />
                                                    </Expander>

                                                    <Expander x:Name="Panel_GameRelations_SameSeriesControl"
                                                              Header="{DynamicResource LOCGameRelations_SameSeriesLabel}"
                                                              IsExpanded="True"
                                                              Margin="0,10,0,0"
                                                              Visibility="{PluginSettings Plugin=GameRelations, Path=SameSeriesControlSettings.IsVisible, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}">
                                                        <ContentControl x:Name="GameRelations_SameSeriesControl" Margin="0,10,0,0" />
                                                    </Expander>

                                                    <Expander x:Name="Panel_GameRelations_SameDeveloperControl"
                                                              Header="{DynamicResource LOCGameRelations_SameDeveloperLabel}"
                                                              IsExpanded="True"
                                                              Margin="0,10,0,0"
                                                              Visibility="{PluginSettings Plugin=GameRelations, Path=SameDeveloperControlSettings.IsVisible, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}">
                                                        <ContentControl x:Name="GameRelations_SameDeveloperControl" Margin="0,10,0,0" />
                                                    </Expander>

                                                    <Expander x:Name="Panel_GameRelations_SamePublisherControl"
                                                              Header="{DynamicResource LOCGameRelations_SamePublisherLabel}"
                                                              IsExpanded="True"
                                                              Margin="0,10,0,0"
                                                              Visibility="{PluginSettings Plugin=GameRelations, Path=SamePublisherControlSettings.IsVisible, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}">
                                                        <ContentControl x:Name="GameRelations_SamePublisherControl" Margin="0,10,0,0" />
                                                    </Expander>
                                                </StackPanel>
                                            </TabItem>

                                            <!--#region WebExplorer-->
                                            <TabItem Header="{DynamicResource LOCWebExplorer_WebLabel}"
                                                     Visibility="{Binding ElementName=WebExplorer_BrowserHostViewControl, Path=Content.IsControlVisible, Converter={StaticResource BooleanToVisibilityConverter}, TargetNullValue=Collapsed, FallbackValue=Collapsed}">
                                                <Grid Margin="0,15,0,50">
                                                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                                                            VerticalAlignment="Top" Opacity="0.5"
                                                            Height="{DynamicResource WebExplorerControlHeight}"
                                                            CornerRadius="{DynamicResource ControlCornerRadius}"/>
                                                    <ContentControl x:Name="WebExplorer_BrowserHostViewControl"
                                                                    VerticalAlignment="Top"
                                                                    Height="{DynamicResource WebExplorerControlHeight}"
                                                                    Margin="0,5,0,5" />
                                                </Grid>
                                                
                                            </TabItem>
                                            <!--#endregion-->
                                        </TabControl>
                                    </DockPanel>
                                </Grid>
                            </Grid>
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>