<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    mc:Ignorable="d">

    <Style TargetType="{x:Type DetailsViewGameOverview}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DetailsViewGameOverview}">
                    <Border Background="{DynamicResource PanelBackgroundBrush}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="BorderBrush" Value="{DynamicResource PanelSeparatorBrush}" />
                                <Setter Property="BorderThickness" Value="20,20,20,20" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Settings ShowPanelSeparators}" Value="False">
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                      Margin="0,0,0,0"
                                      VerticalScrollBarVisibility="Auto"
                                      Style="{DynamicResource DetailsScrollViewer}"
                                      d:DesignWidth="1280"
                                      d:DesignHeight="1550"
                                      d:DataContext="{x:Static DesignMainViewModel.DesignSelectedGameDetailsIntance}"
                                      x:Name="PART_ScrollViewHost">
                            <Grid Margin="0,0,0,20">

                                <Grid>
                                    <Grid.OpacityMask>
                                        <VisualBrush Visual="{Binding ElementName=HeaderMask}"/>
                                    </Grid.OpacityMask>
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Visibility" Value="Visible" />
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=EnableAlternativeDetailsVideoPlayer, FallbackValue=False}" Value="True" />
                                                        <Condition Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsVideoPlaying, FallbackValue=False}" Value="True" />
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </MultiDataTrigger>

                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="{Binding ElementName=PART_ImageBackground, Path=Height}" />
                                        <RowDefinition Height="{Binding ElementName=BackgroundChanger_PluginBackgroundImage, Path=Height}" />
                                    </Grid.RowDefinitions>
                                    <Border Name="HeaderMask"
                                                Tag="{DynamicResource DetailsViewBackgroundImageUseOpacityMask}"
                                                Grid.RowSpan="2">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#000000" />
                                                <Setter Property="CornerRadius" Value="0" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True">
                                                        <Setter Property="Background">
                                                            <Setter.Value>
                                                                <RadialGradientBrush GradientOrigin="0.5,0" Center="0.5,0" RadiusX="2" RadiusY="0.9">
                                                                    <RadialGradientBrush.GradientStops>
                                                                        <GradientStop Color="Black" Offset="0.3" />
                                                                        <GradientStop Color="Transparent" Offset="1" />
                                                                    </RadialGradientBrush.GradientStops>
                                                                </RadialGradientBrush>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Settings ShowPanelSeparators}" Value="False">
                                                        <Setter Property="CornerRadius" Value="20" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>

                                    <Border x:Name="PART_ImageBackground_Wrapper" Grid.Row="0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Visible" />
                                                <Style.Triggers>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{PluginSettings Plugin=BackgroundChanger, Path=HasDataBackground, FallbackValue=False}" Value="True" />
                                                            <Condition Binding="{PluginSettings Plugin=BackgroundChanger, Path=EnableBackgroundImage, FallbackValue=False}" Value="True" />
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <FadeImage x:Name="PART_ImageBackground" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Top" />
                                    </Border>

                                    <ContentControl x:Name="BackgroundChanger_PluginBackgroundImage"
                                                    ClipToBounds="True"
                                                    Grid.Row="1"
                                                    HorizontalAlignment="Center" VerticalAlignment="Top" />
                                    
                                    <Border Background="{StaticResource DarkNoiseBrush}" IsHitTestVisible="False"
                                            Grid.RowSpan="2"
                                            Opacity="{DynamicResource DetailsBackgroundDarkenLayerOpacity}" />

                                    <Border x:Name="ImageBackgroundNoise"
                                            Grid.RowSpan="2"
                                            Background="{DynamicResource NoiseBrush}"
                                            Opacity="0.03"/>
                                </Grid>

                                <!-- ExtraMetadataLoader alternative video player -->
                                <WrapPanel Tag="{DynamicResource DetailsViewBackgroundImageUseOpacityMask}">
                                    <WrapPanel.Style>
                                        <Style TargetType="{x:Type WrapPanel}">
                                            <Setter Property="Visibility" Value="Visible" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsAnyVideoAvailable, FallbackValue=False}" Value="True">
                                                    <Setter Property="Control.Visibility" Value="Visible" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=EnableVideoPlayer, FallbackValue=False}" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True">
                                                    <Setter Property="OpacityMask">
                                                        <Setter.Value>
                                                            <RadialGradientBrush GradientOrigin="0.5,0" Center="0.5,0" RadiusX="2" RadiusY="0.9">
                                                                <RadialGradientBrush.GradientStops>
                                                                    <GradientStop Color="Black" Offset="0.3" />
                                                                    <GradientStop Color="Transparent" Offset="1" />
                                                                </RadialGradientBrush.GradientStops>
                                                            </RadialGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </WrapPanel.Style>
                                    <Grid>
                                        <ContentControl x:Name="ExtraMetadataLoader_VideoLoaderControlAlternative" />
                                        <Border Background="{StaticResource DarkNoiseBrush}" IsHitTestVisible="False"
                                                Opacity="{DynamicResource DetailsBackgroundDarkenLayerOpacity}">
                                            <Border.OpacityMask>
                                                <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                                    <LinearGradientBrush.GradientStops>
                                                        <GradientStop Color="#F2FFFFFF" Offset="-0.1"/>
                                                        <GradientStop Color="#B3FFFFFF" Offset="0.8"/>
                                                    </LinearGradientBrush.GradientStops>
                                                </LinearGradientBrush>
                                            </Border.OpacityMask>
                                        </Border>
                                    </Grid>
                                </WrapPanel>

                                <Grid HorizontalAlignment="Stretch" Margin="40,0,40,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="{Settings CalculatedGameDetailsIndentation}" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid MaxWidth="{DynamicResource DetailsViewDetailsMaxWidth}" Grid.Row="1">
                                        <!--#region Logo & Cover Image-->

                                        <Border x:Name="ExtraMetadataLoader_LogoLoaderControlGrid"
                                                VerticalAlignment="Stretch"
                                                HorizontalAlignment="Stretch"
                                                MinHeight="{PluginSettings Plugin=ExtraMetadataLoader, Path=LogoMaxHeight, FallbackValue=0}"
                                                Tag="{DynamicResource DetailsViewAllowUseOfLogos}">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=EnableLogos, FallbackValue=False}" Value="false">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}, FallbackValue=False}" Value="false" >
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <ContentControl x:Name="ExtraMetadataLoader_LogoLoaderControl" />
                                        </Border>

                                        <Border Background="Transparent"
                                                        Visibility="{Binding ElementName=CoverGridContainer, Path=Visibility}"
                                                        HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                                        Width="{Binding ElementName=CoverGridContainer, Path=ActualWidth}"
                                                        Height="{Binding ElementName=CoverGridContainer, Path=ActualHeight}"
                                                        Padding="0.5">
                                            <Border Background="Transparent"
                                                        CornerRadius="{DynamicResource DetailsViewCoverCornerRadius}"
                                                        BorderThickness="8" BorderBrush="#0d0d0d">
                                                <Border.Effect>
                                                    <DropShadowEffect BlurRadius="15" RenderingBias="Performance"
                                                                          ShadowDepth="0" Color="#0d0d0d" Opacity="0.3" />
                                                </Border.Effect>
                                            </Border>
                                        </Border>
                                        
                                        <Grid HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                              Name="CoverGridContainer">
                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ElementName=PART_ImageCover, Path=Visibility}" Value="Visible">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding ElementName=BackgroundChanger_PluginCoverImage, Path=Visibility}" Value="Visible">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>
                                            <Border Name="Mask" Background="White" CornerRadius="6" />

                                            <Border>
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ElementName=BackgroundChanger_PluginCoverImage, Path=Visibility}" Value="Visible">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <Image Name="PART_ImageCover" Height="{Settings GameDetailsCoverHeight}" 
                                                       StretchDirection="Both" Stretch="Uniform" 
                                                       RenderOptions.BitmapScalingMode="Fant" />
                                            </Border>

                                            <ContentControl x:Name="BackgroundChanger_PluginCoverImage"
                                                        Height="{Settings GameDetailsCoverHeight}">
                                                <ContentControl.Style>
                                                    <Style TargetType="ContentControl">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{PluginSettings Plugin=BackgroundChanger, Path=HasDataCover, FallbackValue=False}" Value="True" />
                                                                    <Condition Binding="{PluginSettings Plugin=BackgroundChanger, Path=EnableCoverImage, FallbackValue=False}" Value="True" />
                                                                </MultiDataTrigger.Conditions>
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </MultiDataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ContentControl.Style>
                                            </ContentControl>
                                            <Grid.OpacityMask>
                                                <VisualBrush Visual="{Binding ElementName=Mask}" />
                                            </Grid.OpacityMask>
                                        </Grid>
                                        <!--GridConverterGridPanelCloseButton-->
                                        <!--#regionend-->
                                    </Grid>
                                    <DockPanel Margin="0,20,0,15" MaxWidth="{DynamicResource DetailsViewDetailsMaxWidth}" Grid.Row="2" Background="Transparent">
                                        <StackPanel VerticalAlignment="Bottom" DockPanel.Dock="Left">
                                            <DockPanel>
                                                <Image Name="PART_ImageIcon" MaxHeight="24" MaxWidth="24" DockPanel.Dock="Left" 
                                                       Margin="0,0,10,0" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="Fant">
                                                    <Image.Clip>
                                                        <RectangleGeometry RadiusX="4" RadiusY="4" Rect="0,0,24,24" />
                                                    </Image.Clip>
                                                </Image>

                                                <Border DockPanel.Dock="Left"
                                                        Tag="{DynamicResource DetailsViewDisplayGameNameIfLogoVisible}">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                            <Style.Triggers>
                                                                <MultiDataTrigger>
                                                                    <MultiDataTrigger.Conditions>
                                                                        <Condition Binding="{Binding Tag, RelativeSource={RelativeSource Self}, FallbackValue=False}" Value="False" />
                                                                        <Condition Binding="{Binding ElementName=ExtraMetadataLoader_LogoLoaderControl, Path=Visibility, FallbackValue=Collapsed}" Value="Visible" />
                                                                        <Condition Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsLogoAvailable, FallbackValue=False}" Value="True" />
                                                                    </MultiDataTrigger.Conditions>
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                </MultiDataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock FontFamily="{DynamicResource FontFamily}" Name="PART_TextDisplayName"
                                                               FontWeight="Medium"
                                                               FontSize="{DynamicResource FontSizeLargest}" Margin="0,0,10,0" 
                                                               TextWrapping="Wrap" VerticalAlignment="Center" Foreground="{DynamicResource TextBrush}" />
                                                </Border>

                                                <ContentControl x:Name="DuplicateHider_SourceSelector" 
                                                            DockPanel.Dock="Left" VerticalAlignment="Center"
                                                            VerticalContentAlignment="Center"   
                                                            Margin="0,0,10,0"  
                                                            Height="24"
                                                            RenderOptions.BitmapScalingMode="Fant" />

                                                <ContentControl x:Name="CheckLocalizations_PluginFlags" Height="30" Margin="0,0,10,0"
                                                            Visibility="{PluginSettings Plugin=CheckLocalizations, Path=EnableIntegrationFlags, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                            HorizontalAlignment="Left" VerticalAlignment="Center"
                                                            Opacity="0.85" />

                                                <ContentControl x:Name="NewsViewer_PlayersInGameViewerControl" Margin="0,0,0,0"
                                                                DockPanel.Dock="Left" HorizontalAlignment="Left" VerticalAlignment="Center">
                                                    <ContentControl.Resources>
                                                        <Style TargetType="Button" BasedOn="{StaticResource PlayersCountButtonStyle}" />
                                                    </ContentControl.Resources>
                                                </ContentControl>

                                                <ContentControl x:Name="GogSecondClassWatcher_SecondClassWatcherControl"
                                                                DockPanel.Dock="Left" HorizontalAlignment="Left"
                                                            VerticalAlignment="Center"
                                                            Visibility="{PluginSettings Plugin=GogSecondClassWatcher, Path=IsControlVisible, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                            Margin="10,0,0,0"/>
                                            </DockPanel>

                                            <Border Tag="{DynamicResource DetailsViewDisplayHorizontalBackground}"
                                                    CornerRadius="{DynamicResource ControlCornerRadiusViewPlayButtons}">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="Transparent" />
                                                        <Setter Property="Padding" Value="0,0,0,0" />
                                                        <Setter Property="Margin" Value="0,20,0,0" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}, FallbackValue=False}" Value="True" >
                                                                <Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}" />
                                                                <Setter Property="Padding" Value="20,10,20,0" />
                                                                <Setter Property="Margin" Value="0,20,0,10" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <WrapPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                                                    <WrapPanel.Resources>
                                                        <Style BasedOn="{StaticResource BaseTextBlockStyle}" TargetType="TextBlock" />
                                                        <Style TargetType="Label">
                                                            <Setter Property="FontWeight" Value="SemiBold" />
                                                            <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
                                                            <Setter Property="Padding" Value="0,0,0,5" />
                                                            <Setter Property="VerticalAlignment" Value="Center" />
                                                            <Setter Property="HorizontalAlignment" Value="Left" />
                                                            <Setter Property="HorizontalContentAlignment" Value="Left" />
                                                        </Style>
                                                    </WrapPanel.Resources>
                                                    <DockPanel Margin="0,0,0,10" Visibility="{Binding Visibility, ElementName=PART_ElemLastPlayed, Mode=OneWay}">
                                                        <StackPanel VerticalAlignment="Center" >
                                                            <Label Name="PART_ElemLastPlayed" Content="{DynamicResource LOCLastPlayed}" HorizontalAlignment="Center" />
                                                            <DockPanel HorizontalAlignment="Center" Opacity="0.8">
                                                                <Viewbox HorizontalAlignment="Center"
                                                                    Width="16"
                                                                    Margin="0,0,5,0"
                                                                    VerticalAlignment="Center"
                                                                    Stretch="Uniform">
                                                                    <TextBlock
                                                                        FontFamily="Segoe MDL2 Assets"
                                                                        FontWeight="Normal"
                                                                        Foreground="{DynamicResource GlyphBrush}"
                                                                        Text="&#xE787;" />
                                                                </Viewbox>
                                                                <TextBlock Name="PART_TextLastActivity" VerticalAlignment="Center" />
                                                            </DockPanel>
                                                        </StackPanel>
                                                        <Border Background="{DynamicResource GlyphBrush}" Height="30" Width="1" Margin="20,0,20,0"
                                                        VerticalAlignment="Center"/>
                                                    </DockPanel>

                                                    <DockPanel Margin="0,0,0,10"
                                                           Visibility="{Binding Visibility, ElementName=PART_ElemPlayTime, Mode=OneWay}">
                                                        <StackPanel VerticalAlignment="Center">
                                                            <Label Name="PART_ElemPlayTime" Content="{DynamicResource LOCTimePlayed}" HorizontalAlignment="Center" />
                                                            <DockPanel HorizontalAlignment="Center" Opacity="0.8">
                                                                <Viewbox
                                                                    Width="16"
                                                                    Margin="0,0,5,0"
                                                                    VerticalAlignment="Center"
                                                                    Stretch="Uniform">
                                                                    <TextBlock
                                                                        FontFamily="Segoe MDL2 Assets"
                                                                        FontWeight="Normal"
                                                                        Foreground="{DynamicResource GlyphBrush}"
                                                                        Text="&#xE121;" />
                                                                </Viewbox>
                                                                <TextBlock Name="PART_TextPlayTime" VerticalAlignment="Center" />
                                                            </DockPanel>
                                                        </StackPanel>

                                                        <Border Background="{DynamicResource GlyphBrush}" Height="30" Width="1" Margin="20,0,20,0"
                                                        VerticalAlignment="Center"/>
                                                    </DockPanel>

                                                    <DockPanel Margin="0,0,0,10">
                                                        <DockPanel.Style>
                                                            <Style TargetType="DockPanel">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding ElementName=PART_ButtonCompletionStatus, Path=Visibility}" Value="Visible">
                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding ElementName=ThemeExtras_SettableCompletionStatus, Path=Visibility}" Value="Visible">
                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Settings DetailsVisibility.CompletionStatus}" Value="False">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </DockPanel.Style>
                                                        <DockPanel VerticalAlignment="Center">
                                                            <StackPanel>
                                                                <Label Name="PART_ElemCompletionStatus"
                                                               Content="{DynamicResource LOCCompletionStatus}" HorizontalAlignment="Center" />
                                                                <DockPanel HorizontalAlignment="Center" Opacity="0.8">
                                                                    <Viewbox
                                                                        Width="16"
                                                                        Margin="0,0,5,0"
                                                                        VerticalAlignment="Center"
                                                                        Stretch="Uniform">
                                                                        <TextBlock
                                                                            FontFamily="Segoe MDL2 Assets"
                                                                            Foreground="{DynamicResource GlyphBrush}"
                                                                            Text="&#xE73A;" />
                                                                    </Viewbox>

                                                                    <Border
                                                                        VerticalAlignment="Center"
                                                                        Tag="{PluginStatus Plugin=felixkmh_Extras_Plugin,
                                                                                           Status=Installed}"
                                                                                           Visibility="{Binding RelativeSource={RelativeSource Self}, Path=Tag, Converter={StaticResource InvertedBooleanToVisibilityConverter}}">
                                                                        <Button Name="PART_ButtonCompletionStatus"
                                                                            Margin="0"
                                                                            Style="{StaticResource PropertyItemButton}" />
                                                                    </Border>

                                                                    <ContentControl x:Name="ThemeExtras_SettableCompletionStatus"
                                                                        VerticalAlignment="Center"
                                                                        Visibility="{PluginStatus Plugin=felixkmh_Extras_Plugin,
                                                                                                  Status=Installed}">
                                                                        <ContentControl.Resources>
                                                                            <Style BasedOn="{StaticResource ThemeExtrasUserControlCompStatusStyle}" TargetType="UserControl" />
                                                                        </ContentControl.Resources>
                                                                    </ContentControl>
                                                                </DockPanel>
                                                            </StackPanel>

                                                        </DockPanel>
                                                        <Border Background="{DynamicResource GlyphBrush}" Height="30" Width="1" Margin="20,0,20,0"
                                                        VerticalAlignment="Center"/>
                                                    </DockPanel>

                                                    <DockPanel Margin="0,0,0,10" Visibility="{PluginSettings Plugin=HowLongToBeat, Path=HasData, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                        <StackPanel VerticalAlignment="Center" Name="PART_HowLongToBeat">
                                                            <Label  Content="HowLongToBeat" HorizontalAlignment="Center" />
                                                            <DockPanel HorizontalAlignment="Center" Opacity="0.8" >
                                                                <Viewbox 
                                                                    Width="16"
                                                            MaxHeight="20"
                                                                    Margin="0,0,5,0"
                                                                    VerticalAlignment="Center"
                                                                    Stretch="Uniform">
                                                                    <Path Stretch="Fill" Fill="{DynamicResource GlyphBrush}" Data="m 157.80154 541.46802 v -400 h 97.14286 97.14286 
                                                                    v 238.57143 238.57143 h 40 40 V 380.03945 141.46802 h 97.14285 97.14286 v 400 400 
                                                                    h -97.14286 -97.14285 v -81.42857 -81.42857 h -40 -40 v 81.42857 81.42857 H 254.9444 157.80154 Z"/>
                                                                </Viewbox>
                                                                <ContentControl x:Name="HowLongToBeat_PluginProgressBar" Margin="0,0,0,0" VerticalAlignment="Center" Width="220" HorizontalAlignment="Center"/>
                                                            </DockPanel>
                                                        </StackPanel>
                                                        <Border Background="{DynamicResource GlyphBrush}" Height="30" Width="1" Margin="20,0,20,0"
                                                        VerticalAlignment="Center"/>
                                                    </DockPanel>

                                                    <DockPanel Margin="0,0,0,10" Visibility="{PluginSettings Plugin=SuccessStory, Path=HasData, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                        <StackPanel Name="PART_SuccessStory"
                                                            VerticalAlignment="Center">
                                                            <Label Content="{DynamicResource LOCSuccessStoryAchievements}" HorizontalAlignment="Center" />
                                                            <DockPanel HorizontalAlignment="Center" Opacity="0.8">
                                                                <Viewbox VerticalAlignment="Center"
                                                                    Width="16"
                                                                    Margin="0,0,5,0"
                                                                    Stretch="Uniform">
                                                                    <TextBlock
                                                                        FontFamily="{DynamicResource FontIcoFont}"
                                                                        FontWeight="Normal"
                                                                        Foreground="{DynamicResource GlyphBrush}"
                                                                        Text="&#xEDD7;" />
                                                                </Viewbox>
                                                                <DockPanel VerticalAlignment="Center">
                                                                    <DockPanel VerticalAlignment="Center">
                                                                        <TextBlock Text="{PluginSettings Plugin=SuccessStory, Path=Unlocked, FallbackValue='-'}"/>
                                                                        <TextBlock Text="/"/>
                                                                        <TextBlock Text="{PluginSettings Plugin=SuccessStory, Path=Total, FallbackValue='-'}"/>
                                                                    </DockPanel>
                                                                    <ProgressBar x:Name="progressBar" FontSize="10" Margin="5,0,0,0" VerticalAlignment="Center"
                                                            Maximum="{PluginSettings Plugin=SuccessStory, Path=Total, FallbackValue=0}" Value="{PluginSettings Plugin=SuccessStory, Path=Unlocked, FallbackValue=0}" HorizontalAlignment="Left"
                                                            Background="{DynamicResource TextBrush}" Foreground="{DynamicResource GlyphBrush}" Width="60" Height="10" Style="{DynamicResource RoundedProgressBar}">
                                                                        <ProgressBar.Resources>
                                                                            <Style x:Key="RoundedProgressBar" TargetType="ProgressBar">
                                                                                <Setter Property="Background" Value="{DynamicResource NormalBrushDark}"/>
                                                                                <Setter Property="BorderThickness" Value="{DynamicResource ControlBorderThickness}"/>
                                                                                <Setter Property="Template">
                                                                                    <Setter.Value>
                                                                                        <ControlTemplate TargetType="{x:Type ProgressBar}">
                                                                                            <Border BorderThickness="{TemplateBinding BorderThickness}"
								                                                CornerRadius="{DynamicResource ControlCornerRadius}">
                                                                                                <Grid SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                                                                                                    <Rectangle Fill="{TemplateBinding Background}" RadiusY="4" RadiusX="4"/>
                                                                                                    <Rectangle x:Name="PART_Track" Margin="0" RadiusY="4" RadiusX="4"/>
                                                                                                    <Decorator x:Name="PART_Indicator" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                                                                                                        <Grid>
                                                                                                            <Rectangle Fill="{TemplateBinding Foreground}" RadiusY="4" RadiusX="4"/>
                                                                                                        </Grid>
                                                                                                    </Decorator>
                                                                                                </Grid>
                                                                                            </Border>
                                                                                        </ControlTemplate>
                                                                                    </Setter.Value>
                                                                                </Setter>
                                                                            </Style>
                                                                        </ProgressBar.Resources>
                                                                    </ProgressBar>
                                                                </DockPanel>
                                                            </DockPanel>
                                                        </StackPanel>
                                                    </DockPanel>
                                                </WrapPanel>
                                            </Border>

                                            <DockPanel Margin="0,20,0,0" LastChildFill="False">
                                                <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Margin="0,0,20,0" DockPanel.Dock="Left">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Button Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="PART_ButtonPlayAction" Height="40" Style="{DynamicResource PlayButton}" />
                                                    <Button Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="PART_ButtonContextAction" Height="40" Style="{DynamicResource ContextButtonViews}" />
